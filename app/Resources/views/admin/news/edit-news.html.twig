{% extends "admin/layout-admin.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-6">
            <h3 class="text-uppercase" style="margin-top: 25px">Modifier une news</h3>
        </div>
        <div class="col-md-6 text-right">
            <a href="{{ path('admin_news') }}" class="btn btn-fill btn-danger text-uppercase" style="margin: 20px 0 10px 0">annuler</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card" style="padding: 15px">
                <div class="form container-fluid">
                    {{ form_start(form) }}
                    {{ form_errors(form) }}
                    <div class="add-title">
                        {{ form_row(form.title) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.content) }}
                    </div>
                    <div class="add-title">
                        {{ form_row(form.inserted_at) }}
                    </div>
                    <div class="publication">
                        {{ form_row(form.published_at) }}
                    </div>
                    <button type="submit" class="btn btn-fill btn-info text-uppercase" id="add-button">Modifier</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}