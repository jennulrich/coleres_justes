{% extends "admin/layout-admin.html.twig" %}

{% block content %}
<div class="row">
    <div class="col-md-12">
        {% for about in abouts %}
        <div class="card" style="padding: 20px">
            <div class="row" style="display: flex;">
                <div class="col-md-4" style="margin: auto">
                    <img src="{{ path("about_image", {"id":about.id}) }}" alt="" style="width: 100%;">
                </div>
                <div class="col-md-8">
                    <div style="font-size: 10pt">
                        {{ about.content|markdown }}
                    </div>
                </div>
            </div>
        </div>
        <a href="{{ path('admin_edit_about', {"id":about.id}) }}" class="text-uppercase btn btn-sm btn-fill btn-info">modifier</a>
        {% endfor %}
    </div>
</div>
{% endblock %}
